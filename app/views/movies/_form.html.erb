<%= form_for @movie do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :format %>
    <%= f.select :format, ['VHS', 'DVD', 'Streaming'], {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :length %>
    <%= f.number_field :length, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :release_year %>
    <%= f.number_field :release_year, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :rating %>
    <%= f.number_field :rating, class: 'form-control' %>
  </div>
<% end %>